
.file_upload
{
	position: relative;
	overflow: hidden;
	direction: ltr;
	cursor: pointer;
	text-align: center;
	color: #ECCC6A;
	text-shadow:1px 1px 1px #9a1a12;
	font-weight: bold;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	border-radius: 10px;
	width: 200px;
	height: 30px;
	line-height: 30px;
	background: #C02719; /* old browsers */
	background: -moz-linear-gradient(top, #C02719 1%, #9A1A12 100%); /* firefox */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(1%, #C02719), color-stop(100%, #9A1A12)); /* webkit */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#C02719', endColorstr='#9A1A12', GradientType=0 ); /* ie */
	border: 1px solid #900;
}

.file_upload_small
{
	width: 200px;
	height: 30px;
	line-height: 30px;
	font-size: auto;
	background: #C02719; /* old browsers */
	background: -moz-linear-gradient(top, #C02719 1%, #9A1A12 100%); /* firefox */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(1%, #C02719), color-stop(100%, #9A1A12)); /* webkit */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#C02719', endColorstr='#9A1A12', GradientType=0 ); /* ie */
	border: 1px solid #900;
}

.file_upload_large
{
	width: 100%;
	height: 150px;
	line-height: 150px;
	font-size: 20px;
	background: #C02719; /* old browsers */
	background: -moz-linear-gradient(top, #C02719 1%, #9A1A12 100%); /* firefox */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(1%, #C02719), color-stop(100%, #9A1A12)); /* webkit */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#C02719', endColorstr='#9A1A12', GradientType=0 ); /* ie */
	border: 1px solid #900;
}

.file_upload_highlight
{
	background: #C02719;
}

.file_upload input
{
	position: absolute;
	top: 0;
	right: 0;
	margin: 0;
	border: 300px solid transparent;
	opacity: 0;
	-ms-filter: 'alpha(opacity=0)';
	filter: alpha(opacity=0);
	-o-transform: translate(0, -300px) scale(6);
	cursor: pointer;
	z-index: 2;
}

.file_upload iframe, .file_upload button
{
	display: none;
}

.file_upload_progress .ui-progressbar-value
{
	background: url(pbar-ani.gif);
}

.file_upload_progress div
{
	width: 150px;
	height: 15px;
}

.file_upload_cancel div
{
	cursor: pointer;
}
